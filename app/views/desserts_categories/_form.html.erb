<div class="row">
  <div class="col-sm-6 col-md-4">

    <%= form_for(@desserts_category) do |f| %>

      <% if @desserts_category.errors.any? %>
        <div class="alert alert-danger">
          <h4><%= pluralize(@desserts_category.errors.count, "error") %>:</h4>
          <ul>
            <% @desserts_category.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group">
        <%= f.label :name, class: "sr-only" %></br>
        <%= f.text_field :name, class: "form-control", placeholder: t('activerecord.attributes.desserts_category.name') %>
      </div>
      <div class="form-group">
        <%= f.label :image_url, class: "sr-only" %></br>
        <%= f.text_field :image_url, class: "form-control", placeholder: t('activerecord.attributes.desserts_category.image_url') %>
      </div>

      <%= f.submit t('forms.buttons.submit'), class: "btn btn-primary"%>
    <% end %>
  </div>
</div>
