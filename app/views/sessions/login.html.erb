<% @page_title = t('sessions.login.title') -%>
<hr class="top-divider">

<div class="container">
    <div class="row">
        <div class="col-sm-6 col-md-4 col-md-offset-4">
            <h2><%= t('sessions.login.title')%></h2>
            <div class="account-wall">
                <img class="profile-img" src="default-avatar.png"
                    alt="">
                <%= form_tag('/login_attempt', {:class => 'form-signin'}) do %>
                <%= text_field_tag(:username_or_email, nil, placeholder: t('forms.labels.username_or_email'), class: 'form-control') %>
                <%= password_field_tag(:login_password, nil, placeholder: t('forms.labels.password'), class: 'form-control') %>
                <%= submit_tag(t('forms.buttons.login'), class: 'btn btn-lg btn-primary btn-block') %>
                <% end %>
            </div>
        </div>
    </div>
</div>