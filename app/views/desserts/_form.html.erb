<div class="row">
  <div class="col-sm-6 col-md-4">

    <% if @dessert.errors.any? %>
      <div class="alert alert-danger">
        <h4><%= pluralize(@dessert.errors.count, "error") %>:</h4>
        <ul>
          <% @dessert.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.label :name, class: "sr-only" %></br>
      <%= f.text_field :name, class: "form-control", placeholder: t('activerecord.attributes.dessert.name') %>
    </div>
    <div class="form-group">
      <%= f.label :image_url, class: "sr-only" %></br>
      <%= f.text_field :image_url, class: "form-control", placeholder: t('activerecord.attributes.dessert.image_url') %>
    </div>
    <div class="form-group">
      <%= f.label :description, class: "sr-only" %></br>
      <%= f.text_area :description, class: "form-control", placeholder: t('activerecord.attributes.dessert.description') %>
    </div>
    <div class="form-group">
      <%= f.label :retail_price, class: "sr-only" %></br>
      <%= f.text_field :retail_price, class: "form-control", placeholder: t('activerecord.attributes.dessert.retail_price') %>
    </div>
    <div class="form-group">
      <%= f.label :wholesale_price, class: "sr-only" %></br>
      <%= f.text_field :wholesale_price, class: "form-control", placeholder: t('activerecord.attributes.dessert.wholesale_price') %>
    </div>
    <div class="form-group">
      <%= f.label :desserts_category_id, class: "sr-only" %></br>
      <%= f.select :desserts_category_id, @options, {}, { class: 'form-control', placeholder: t('activerecord.attributes.dessert.desserts_category_id')} %>
    </div>

    <%= f.submit t('forms.buttons.submit'), class: "btn btn-primary"%>
  </div>
</div>